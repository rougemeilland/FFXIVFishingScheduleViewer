<Window x:Class="FFXIVFishingScheduleViewer.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FFXIVFishingScheduleViewer"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Title="{Binding Path=AboutWindowTitleText}"
        MaxWidth="640"
        DataContextChanged="Window_DataContextChanged">
    <DockPanel Margin="10">
        <Button DockPanel.Dock="Bottom" HorizontalAlignment="Center" Content="{Binding Path=GUIText[Label.Close]}" Margin="5" Padding="10,5,10,5" Click="CloseButton_Click"/>
        <StackPanel Orientation="Vertical" Margin="5">
            <TextBlock Text="{Binding Path=ProductVersionText}" Margin="5"/>
            <TextBlock Text="{Binding Path=Copyright}" Margin="5"/>
            <TextBlock Text="{Binding Path=FFXIVLicenseText}" Margin="5" TextWrapping="Wrap"/>
            <TextBlock Height="20"/>
        </StackPanel>
    </DockPanel>
</Window>
